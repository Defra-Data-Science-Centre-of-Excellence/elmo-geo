{
  "editor.formatOnSave": true,
  "python.formatting.provider": "black",
  "python.defaultInterpreterPath": "${env:HOME}/virtualenvs/${workspaceFolderBasename}/bin/python",
  "python.testing.pytestEnabled": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.sortImports.path": "${env:HOME}/virtualenvs/${workspaceFolderBasename}/bin/isort",
  "python.envFile": "${workspaceFolder}/.databricks/.databricks.env",
  "databricks.python.envFile": "${workspaceFolder}/.env",
  "jupyter.interactiveWindow.cellMarker.codeRegex": "^# COMMAND ----------|^# Databricks notebook source|^(#\\s*%%|#\\s*\\<codecell\\>|#\\s*In\\[\\d*?\\]|#\\s*In\\[ \\])",
  "jupyter.interactiveWindow.cellMarker.default": "# COMMAND ----------",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  }
}